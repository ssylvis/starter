<h1>Listing notes</h1>

<%= link_to 'New note', new_note_path %>

<table>
  <tr>
    <th>Note</th>
  </tr>

  <% @notes.each do |note| %>
    <tr>
      <td><%= note.note %></td>
      <td><%= link_to 'Show', note_path(note) %></td>
      <td><%= link_to 'Edit', edit_note_path(note) %></td>
      <td><%= link_to 'Destroy', note_path(note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
